@model izpit.ViewModels.Playlists.CreateNamePlayVM

@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "CREATE PLAYLIST";
}
<fieldset>
    <legend>CREATE PLAYLIST</legend>
    <form action="/Playlists/CreatePlayName" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Title)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Title)

                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Title)

                </div>
                </div>
            <div class="row">

                <div class="col-3">

                    <a class="right" href="/Playlists/Index">BACK</a>
                    <input type="submit" class="right" value="Next" />
                </div>
            </div>
        </div>
    </form>
</fieldset>